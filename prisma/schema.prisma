generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model card {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  createdAt   DateTime @default(now())
}

model user {
  id       String @id @default(cuid())
  name     String
  email    String @unique(map: "User_email_key")
  password String
  role     String @default("user")
}
